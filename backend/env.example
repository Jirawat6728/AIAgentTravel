# =============================================================================
# AI Travel Agent - Environment Variables Example
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# =============================================================================
# LLM Configuration (Gemini)
# =============================================================================
# Required: Gemini API Key from Google AI Studio
# Get it from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Required: Gemini Model Name
# Recommended: gemini-2.5-flash (fast, cost-effective)
# Options: gemini-2.5-flash, gemini-2.5-pro, gemini-2.0-flash-exp
GEMINI_MODEL_NAME=gemini-2.5-flash

# Optional: Alternative Gemini Models (fallback to GEMINI_MODEL_NAME if not set)
GEMINI_SONNET_MODEL=gemini-2.5-flash
GEMINI_FLASH_MODEL=gemini-2.5-flash
GEMINI_PRO_MODEL=gemini-2.5-pro
GEMINI_ULTRA_MODEL=gemini-2.5-pro

# Optional: Gemini API Settings
GEMINI_TIMEOUT_SECONDS=60
GEMINI_MAX_RETRIES=3
ENABLE_GEMINI=true

# Optional: Auto Model Switching (disabled by default)
ENABLE_AUTO_MODEL_SWITCHING=false

# =============================================================================
# Database Configuration
# =============================================================================
# MongoDB Connection String
# Local: mongodb://localhost:27017
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=travel_agent

# Redis Configuration (for caching and rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# =============================================================================
# Authentication Configuration
# =============================================================================
# Google OAuth Client ID (for Google Sign-In)
# Get it from: https://console.cloud.google.com/apis/credentials
# Can be shared with frontend (VITE_GOOGLE_CLIENT_ID)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Session Configuration
SECRET_KEY=your-secret-key-here-change-in-production
SESSION_COOKIE_NAME=session_id
SESSION_EXPIRY_DAYS=30

# =============================================================================
# Firebase Configuration (for Firebase Authentication)
# =============================================================================
# Option 1: Firebase Service Account JSON File Path
# Download from: https://console.firebase.google.com/project/YOUR_PROJECT/settings/serviceaccounts/adminsdk
FIREBASE_CREDENTIALS_PATH=path/to/firebase-service-account.json

# Option 2: Firebase Project ID (for default credentials in GCP)
FIREBASE_PROJECT_ID=your-firebase-project-id

# Firebase Web API Key (for frontend)
# Get from: https://console.firebase.google.com/project/YOUR_PROJECT/settings/general
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com

# Frontend Firebase Configuration (VITE_ prefix for Vite)
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
VITE_FIREBASE_APP_ID=your-firebase-app-id
VITE_FIREBASE_ENABLED=true

# =============================================================================
# Google Maps Configuration
# =============================================================================
# Google Maps API Key (for route planning and geocoding)
# Get it from: https://console.cloud.google.com/apis/credentials
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# =============================================================================
# Amadeus API Configuration
# =============================================================================
# Amadeus API Credentials
# Get from: https://developers.amadeus.com/get-started
# Legacy (for backward compatibility)
AMADEUS_API_KEY=your-amadeus-api-key
AMADEUS_API_SECRET=your-amadeus-api-secret
AMADEUS_ENV=test

# Amadeus Search API (separate keys for security)
# search=production for real flight/hotel data; use production keys
AMADEUS_SEARCH_ENV=production
AMADEUS_SEARCH_API_KEY=your-amadeus-search-api-key
AMADEUS_SEARCH_API_SECRET=your-amadeus-search-api-secret

# Amadeus Booking API (separate keys for security)
# booking=test (sandbox) required; production booking not allowed by app
AMADEUS_BOOKING_ENV=test
AMADEUS_BOOKING_API_KEY=your-amadeus-booking-api-key
AMADEUS_BOOKING_API_SECRET=your-amadeus-booking-api-secret

# =============================================================================
# Payment Gateway Configuration (Omise)
# =============================================================================
# Omise Payment Gateway Credentials
# Get from: https://dashboard.omise.co/
OMISE_SECRET_KEY=skey_test_your-omise-secret-key
OMISE_PUBLIC_KEY=pkey_test_your-omise-public-key

# =============================================================================
# Email Verification (Firebase)
# =============================================================================
# การยืนยันอีเมลใช้ Firebase Auth บนฝั่ง Client (sendEmailVerification)
# ไม่ต้องตั้งค่า Nodemailer/SMTP — ตั้งค่า Firebase (FIREBASE_PROJECT_ID / FIREBASE_CREDENTIALS_PATH) ให้ครบ

# =============================================================================
# SMS/OTP Configuration (สำหรับยืนยันเบอร์โทร - Twilio)
# =============================================================================
# ถ้าไม่ตั้งค่า OTP จะถูก log ใน console เท่านั้น (สำหรับ dev)
# TWILIO_ACCOUNT_SID=your-account-sid
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_PHONE_NUMBER=+1234567890
# SMS_OTP_EXPIRE_MINUTES=5

# =============================================================================
# Admin Dashboard Configuration
# =============================================================================
# Admin Login Credentials
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-admin-password-here
ADMIN_ENABLED=true
ADMIN_REQUIRE_AUTH=true

# =============================================================================
# Application URLs
# =============================================================================
# Frontend URL (for email verification links and redirects)
FRONTEND_URL=http://localhost:5173

# Backend API URL (for frontend)
VITE_API_BASE_URL=http://localhost:8000

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
# LOG_FILE=logs/app.log  # Optional: specify log file path

# =============================================================================
# Agent Configuration
# =============================================================================
CONTROLLER_MAX_ITERATIONS=3
CONTROLLER_TEMPERATURE=0.3
RESPONDER_TEMPERATURE=0.7

# =============================================================================
# Development Settings
# =============================================================================
# Optional: Custom .env file path
# DOTENV_PATH=.env
